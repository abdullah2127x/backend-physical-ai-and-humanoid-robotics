# RAG Chatbot Backend - Environment Configuration
# Copy this file to .env and fill in the values

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false
APP_LOG_LEVEL=info

# Qdrant Vector Database (Qdrant Cloud Free Tier)
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=book_content

# Cohere Embeddings
COHERE_API_KEY=your_cohere_api_key_here
COHERE_EMBEDDING_MODEL=embed-english-v3.0
COHERE_EMBEDDING_BATCH_SIZE=96

# LiteLLM / OpenRouter (LLM Generation)
OPENROUTER_API_KEY=your_openrouter_api_key_here
LITELLM_MODEL=gpt-4o-mini
LITELLM_API_BASE=https://openrouter.ai/api/v1
LITELLM_TIMEOUT=30.0
LITELLM_MAX_TOKENS=1000

# RAG Configuration
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CHUNKS=10
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_RESPONSE_CACHE_TTL=3600

# Session Configuration
SESSION_TIMEOUT_HOURS=24
SESSION_MAX_MESSAGES=100

# Content Paths
CONTENT_ROOT_PATH=./content
INGESTION_CHUNK_SIZE=200-500

# Performance & Limits
MAX_CONCURRENT_REQUESTS=100
MAX_REQUEST_BODY_SIZE=10485760  # 10MB in bytes
